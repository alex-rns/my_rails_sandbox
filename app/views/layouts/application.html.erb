<!DOCTYPE html>
<html>
<head>
  <title>MyRailsSandbox</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>

<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
  <%= link_to image_tag('logo.png', width: 100), home_path, class: "my-0 mr-md-auto" %>
  <nav class="my-2 my-md-0 mr-md-3">
    <span class="p-2 text-dark"><%= link_to "Про нас", about_path %></span>
  </nav>
  <span class="p-2 text-dark"><%= link_to "Добавление статьи", new_post_path %></span>
  <span class="p-2 text-dark"><%= link_to "Регистрация", registration_path %></span>
</div>
<div class="container">
  <div class="row">
    <% flash.each do |name, mes| %>
    <div class="alert alert-<%= name %>">
      <%= mes %>
    </div>
    <% end %>
  </div>
</div>
<div class="container">
  <%= yield %>
</div>
</body>
</html>
