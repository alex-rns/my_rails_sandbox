<h1>Регистрация</h1>
<%= form_for(@user) do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password%>
  </div>
  <div>
    <%= form.submit "Зарегиться" %>
  </div>
<% end %>